---
import { getLocale } from 'astro-i18n-aut';
import { useTranslations } from '../i18n/utils';

const locale = getLocale(Astro.url);
const t = useTranslations(locale);

---

<img
  class="logo"
  src ="/favicon.svg"
  alt={t('page.logo.altText')}
  width="500"
  height="500"
/>

<style lang="scss">
  @use "../styles/functions" as fn;

  .logo {
    max-width: fn.to-rem(128);
    max-height: fn.to-rem(128);
    margin: fn.to-rem(var(--spacing-xl)) auto;
    display: block;
  }

</style>
