---
import { Image } from 'astro:assets';

const {
  image,
  alt,
} = Astro.props;
---

<Image
  src={image}
  alt={alt}
  class="avatar"
/>

<style lang="scss">
  @use '../styles/functions' as fn;

  .avatar {
    display: block;
    border-radius: 50%;
    border: 1px solid green;
    width: fn.to-rem(64);
    height: fn.to-rem(64);
  }
</style>
