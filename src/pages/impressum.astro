---
import { getLocale } from 'astro-i18n-aut';
import i18n from '../i18n/i18n-impressum';
import { useTranslations } from '../i18n/utils';

import Layout from '../layouts/Layout.astro';
import Section from '../components/Section/Section';
import Jumbotron from '../components/Jumbotron/Jumbotron';
import Richtext from '../components/Richtext/Richtext';

const locale = getLocale(Astro.url);
const t = useTranslations(locale, i18n);

const pageMetaInformation = {
  tags: [
    {
      content: t('description'),
      name: 'description',
    },
    {
      content: 'noindex',
      name: 'robots',
    },
  ],
  title: t('docTitle'),
};

const jumbotronData = {
  heading: {
    level: 1,
    text: t('title'),
    visualLevel: false,
  },
  leadTextContent: t('lead'),
  mainJumbo: false,
};

---

<Layout
  pageMetaTags={pageMetaInformation.tags}
  pageTitle={pageMetaInformation.title}
  hideContactForm={true}
>
  <Section>
    <Jumbotron {...jumbotronData} />
    <Richtext text={t('richtext')} />
  </Section>
</Layout>
